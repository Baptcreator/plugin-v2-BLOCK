{
    "name": "restaurant-block/booking-plugin",
    "description": "Plugin WordPress/Elementor complet pour la gestion de devis de privatisation de restaurant",
    "type": "wordpress-plugin",
    "version": "1.0.0",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Restaurant Block Team",
            "email": "dev@restaurant-block.fr",
            "homepage": "https://restaurant-block.fr"
        }
    ],
    "keywords": [
        "wordpress",
        "plugin", 
        "elementor",
        "restaurant",
        "booking",
        "quote",
        "privatisation",
        "catering"
    ],
    "homepage": "https://restaurant-block.fr/plugin",
    "support": {
        "email": "support@restaurant-block.fr",
        "issues": "https://github.com/restaurant-block/plugin/issues",
        "docs": "https://restaurant-block.fr/docs"
    },
    "require": {
        "php": ">=8.0",
        "composer/installers": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6",
        "wp-coding-standards/wpcs": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "RestaurantBooking\\": "includes/"
        },
        "files": [
            "restaurant-booking-plugin.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "RestaurantBooking\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs --standard=WordPress --ignore=vendor,node_modules .",
        "cbf": "phpcbf --standard=WordPress --ignore=vendor,node_modules .",
        "install-codestandards": [
            "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "installer-name": "restaurant-booking-plugin",
        "wordpress-install-dir": "wp-content/plugins/restaurant-booking-plugin"
    }
}
